                "                    return;\n",
                "                });\n",
                "                return;\n",
                "            });\n",
                "            return;\n",
                "        }\n",
                "        var buffer = new ",
                "Buffer(record.kinesis.data, 'base64');\n",
                "        zlib.unzip(buffer, function(err, buffer) {\n",
                "            if (err) return iter(err);\n",
